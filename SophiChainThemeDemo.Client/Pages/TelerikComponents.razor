<TelerikPopover @ref="@ClickPopoverRef"
				AnimationType="@AnimationType.Fade"
				AnchorSelector=".click-popover-div"
				Collision="@PopoverCollision.Flip"
				Offset="20"
				Position="@PopoverPosition.Bottom"
				Width="300px"
				ShowOn="@PopoverShowOn.Click">
	<PopoverHeader>
		عنوان پاپ اور
	</PopoverHeader>
	<PopoverContent>
		<p>محتوای پاپ اور</p>
		<p>محتوای پاپ اور</p>

@using Telerik.Blazor
@using Telerik.Blazor.Components
@inject TelerikWrapperStateService WrapperService

@if (!WrapperService.IsStartRendered)
{
	<TelerikRootComponent EnableRtl="true" IconType="IconType.Svg">
}
else
{
	</TelerikRootComponent>
}

@code {
	protected override void OnInitialized()
	{
		if (!WrapperService.IsStartRendered)
		{
			WrapperService.IsStartRendered = true;
		}
	}
}
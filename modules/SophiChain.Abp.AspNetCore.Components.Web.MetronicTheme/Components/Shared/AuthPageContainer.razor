@using Volo.Abp.Ui.Branding
@inject IBrandingProvider BrandingProvider
@inject MetronicThemeBrandingProvider MetronicThemeBrandingProvider

@{
	var lightLogo = MetronicThemeBrandingProvider.GetLogoUrl("light-logo");
	var darkLogo = MetronicThemeBrandingProvider.GetLogoUrl("dark-logo");
	var minimizedLogo = MetronicThemeBrandingProvider.GetLogoUrl("minimized-logo");
}

<div id="sc-layout auth1-layout">
	<div class="d-flex flex-column flex-root" id="kt_app_root">
		<div class="d-flex flex-column flex-lg-row flex-column-fluid">
			<div class="d-flex flex-column flex-lg-row-fluid w-lg-50 p-10 order-2 order-lg-1">
				<div class="d-flex flex-center flex-column flex-lg-row-fluid">
					<div class="w-lg-500px p-10">
						@PageContent
					</div>
				</div>
				<div class="d-flex flex-center flex-wrap px-5">
					<div class="d-flex fw-semibold text-primary fs-base">
						<a href="#" class="px-5" target="_blank">Terms</a>

						<a href="#" class="px-5" target="_blank">Plans</a>

						<a href="#" class="px-5" target="_blank">Contact Us</a>
					</div>
				</div>
			</div>
			<div class="d-flex flex-lg-row-fluid w-lg-50 bgi-size-cover bgi-position-center order-1 order-lg-2" style='background-image:url(@KTTheme.GetAssetPath("media/misc/auth-bg.png"))'>
				<div class="d-flex flex-column flex-center py-7 py-lg-15 px-5 px-md-15 w-100">
					<a href="/" class="mb-12">
						<img alt="@BrandingProvider.AppName" src="@lightLogo" class="h-60px h-lg-75px">
					</a>
					<img class="d-none d-lg-block mx-auto w-275px w-md-50 w-xl-500px mb-10 mb-lg-20" src='@KTTheme.GetAssetPath("media/misc/auth-screens.png")' alt="" />
					<h1 class="d-none d-lg-block text-white fs-2qx fw-bolder text-center mb-7">
						@BrandingProvider.AppName
					</h1>
				</div>
			</div>
		</div>
	</div>
</div>

@code {
	[Parameter] public RenderFragment PageContent { get; set; }
}
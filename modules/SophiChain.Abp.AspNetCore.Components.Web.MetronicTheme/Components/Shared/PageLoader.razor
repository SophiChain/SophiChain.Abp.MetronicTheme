@using Volo.Abp.Ui.Branding
@inject IKTTheme KTTheme;
@inject IBrandingProvider BrandingProvider

@{
	var isLoadingClass = "d-flex justify-content-center align-items-center";
	var isLoadingText = IsLoadingText.IsNullOrWhiteSpace() ? "در حال بارگذاری ..." : IsLoadingText;
}

<div class="app-page-loader flex-column @(IsLoading ? isLoadingClass : "")">
	<img src="@BrandingProvider.LogoUrl" alt="@BrandingProvider.AppName" class="theme-light-show h-25px">
	<img src="@BrandingProvider.LogoUrl" alt="@BrandingProvider.AppName" class="theme-dark-show h-25px">

	<div class="d-flex align-items-center mt-5">
		<span class="spinner-border text-primary" role="status"></span>
		<span class="text-muted fs-6 fw-semibold ms-5">
			@isLoadingText
		</span>
	</div>
</div>

@code {
	[Parameter] public bool IsLoading { get; set; }
	[Parameter] public string? IsLoadingText { get; set; }
}
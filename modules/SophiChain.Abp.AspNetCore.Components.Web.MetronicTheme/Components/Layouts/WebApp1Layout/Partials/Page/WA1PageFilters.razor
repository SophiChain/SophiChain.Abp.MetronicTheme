<div class="page-filters mb-5">
	<div class="card shadow-sm">
		<div class="card-header collapsible cursor-pointer rotate @(IsFilterOpen ? "" : "collapsed")"
			 data-bs-toggle="collapse"
			 data-bs-target="#kt_docs_card_collapsible">
			<h3 class="card-title">
				<i class="ki-duotone ki-filter fs-1 me-2">
					<span class="path1"></span>
					<span class="path2"></span>
				</i>
				<span class="ml-2">فیلترها</span>
				
			</h3>
			<div class="card-toolbar rotate-180">
				<i class="ki-duotone ki-down fs-1"></i>
			</div>
		</div>
		<div id="kt_docs_card_collapsible" class="collapse @(IsFilterOpen ? "show" : "")">
			<div class="card-body">
				@FiltersContent
			</div>
			<div class="card-footer d-flex align-items-center justify-content-end gap-3">
				@FiltersButtons
				@if (ShowFiltersSave)
				{
					<button class="btn btn-sm btn-primary fs-7" type="button">
						ذخیره تنظیمات
					</button>
				}
			</div>
		</div>
	</div>
</div>
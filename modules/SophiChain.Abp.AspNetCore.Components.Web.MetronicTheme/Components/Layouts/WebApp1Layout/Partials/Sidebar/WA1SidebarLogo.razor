@using Volo.Abp.Ui.Branding
@inject IBrandingProvider BrandingProvider

<div class="app-sidebar-logo" id="kt_app_sidebar_logo">
	<a href="/">
		<img alt="@BrandingProvider.AppName" src="@BrandingProvider.LogoUrl" class="h-50px app-sidebar-logo-default">
		<img alt="@BrandingProvider.AppName" src="@BrandingProvider.LogoUrl" class="h-50px app-sidebar-logo-dark">
		<img alt="@BrandingProvider.AppName" src="@BrandingProvider.LogoUrl" class="h-25px app-sidebar-logo-minimize">
		<div class="sc-brand-name">@BrandingProvider.AppName</div>
	</a>
	<div id="kt_app_sidebar_toggle"
		 class="app-sidebar-toggle btn btn-icon btn-shadow btn-sm btn-color-muted btn-active-color-primary body-bg h-30px w-30px position-absolute top-50 start-100 translate-middle"
		 data-kt-toggle="true"
		 data-kt-toggle-target="body"
		 data-kt-toggle-name="app-sidebar-minimize">
		@((MarkupString)KTTheme.GetIcon("black-left-line", "fs-2 rotate-180"))
	</div>
</div>